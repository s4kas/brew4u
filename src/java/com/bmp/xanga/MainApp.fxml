<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu id="file" mnemonicParsing="false" text="Ficheiro">
            <items>
              <MenuItem id="openRecipe" mnemonicParsing="false" text="Abrir receita" />
            </items>
          </Menu>
          <Menu id="options" mnemonicParsing="false" text="Opções">
            <items>
              <MenuItem id="selectTerm" mnemonicParsing="false" text="Selec. Termómetro" />
            </items>
          </Menu>
          <Menu id="help" mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem id="about" mnemonicParsing="false" text="Acerca" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <TextFlow BorderPane.alignment="CENTER">
         <children>
            <Label text="\@ Cerveja XANGA" textFill="#dddada">
               <font>
                  <Font name="Helvetica" size="13.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </TextFlow>
   </bottom>
</BorderPane>
